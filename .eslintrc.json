{
  "root": true,
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-unused-vars": ["warn"],
    "prefer-const": ["error"],
    "eqeqeq": ["error", "always"],
    "curly": ["error", "all"],
    "no-console": ["warn"],
    "arrow-spacing": ["error", { "before": true, "after": true }],
    "space-before-function-paren": ["error", "always"]
  },
  "ignorePatterns": ["node_modules/", "public/"]
}
